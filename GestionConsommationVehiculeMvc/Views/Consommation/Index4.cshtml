@model IEnumerable<GestionConsommationVehiculeMvc.Models.consommation>
@{
    ViewBag.Title = "Index4";
    Layout = "~/Views/Layout/_Defaults.cshtml";
}
<!Doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color: rgb(0, 255, 255)">
        <h5 style="text-align: center; font-size: 30px; background-color: rgb(255, 216, 0)"><u><b>Rapport Detaille des consommations des vehicules</b></u></h5>
        <br />

        <b style="font-size: 27px; background-color: rgb(237, 17, 49)"><i class="fa fa-refresh fa-spin"></i><b style="text-align: center; color: black">@Html.ActionLink("Mettre a l'etat initial Cette affichage du rapport de la consommation des vehicules", "Index4")</b></b>
       <p>
            @using (Html.BeginForm("Index4", "Consommation", FormMethod.Post))
            {
                <span id="startDate"><b>DateDebut</b></span><input type="date" name="datedebut" />
                <span id="endDate"><b>DateFin</b></span><input type="date" name="datefin" />
                <input type="submit" name="submit" value="Rapport Detaille" />
            }
        </p>

        <h5 style="text-align: center; font-size: 30px; background-color: rgb(255, 216, 0)"><b><u>@ViewBag.Rapport</u></b></h5>
        <br />
       <br />
        <div class="table-responsive">
            <div class="container mt-15">
                <div class="mt-3">


                    <table class="table table-striped table table-bordered" id="users-list">
                        <thead class="table-dark">
                            <tr>
                                <th>No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.vehicule.NumeroImatriculation)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.typeconsommation.NomTypeConsommation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.quantite)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PrixUnitaire)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PrixTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateConsommation)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model)
                            {
                                no++;
                                <tr>
                                    <td>@no</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehicule.NumeroImatriculation)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.typeconsommation.NomTypeConsommation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.quantite)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrixUnitaire)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PrixTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateConsommation)
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
}