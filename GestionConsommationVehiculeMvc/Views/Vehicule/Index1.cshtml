@model  IEnumerable<GestionConsommationVehiculeMvc.Models.vehicule>
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Layout/_Defaults.cshtml";
}


<!Doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color: rgb(0, 255, 255)">
        <h5  style="text-align: center; font-size:30px;background-color:rgb(255, 216, 0)"><u><B>Liste des vehicules</B></u></h5><br/> 
        <hr />
        <div class="table-responsive">
            <div class="container mt-15">
                <div class="mt-3">


                    <table class="table table-striped table table-bordered" id="users-list">
                        <thead class="table-dark">
                            <tr>
                                <th>NUmero</th>
                                <th>

                                    <label>Plaque</label>
                                </th>

                                <th>
                                    <label>Modele</label>
                                </th>
                                
                                <th>

                                   <label>Marque</label>
                                </th>
                                <th>
                                    <label>CarteRose</label>
                                </th>
                                <th>
                                    <label>NumeroMoteur</label>
                                </th>
                                <th>
                                    <label>Couleur</label>
                                </th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model)
                            {
                                no++;
                                <tr>
                                    <td>@no</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumeroImatriculation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.modele)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.marque)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumeroCarteRose)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Numerochasse)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.couleur)
                                    </td>
                                    
                                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
}

