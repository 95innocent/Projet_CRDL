@model IEnumerable<GestionConsommationVehiculeMvc.Models.affectation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<!Doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color: rgb(0, 255, 255)">
        <div class="fa fa-home" style="text-align: center; font-size: 50px">Administrateurs</div>
        <h5  style="text-align: center; font-size:30px;background-color:rgb(255, 216, 0)"><u><B>Liste  des vehicules Et leurs responsables</B></u></h5><br/>
        <hr />
        <div class="table-responsive">
            <div class="container mt-15">
                <div class="mt-3">


                    <table class="table table-striped table table-bordered" id="users-list">
                        <thead class="table-dark">

                            <tr>
                                <th>No</th>
                                <th>
                                    <label>Plaque</label>
                                </th>

                                <th>
                                    <label>Direction</label>
                                </th>
                                <th>
                                    <label>Responsable</label>
                                </th>
                                <th>
                                    <label>DateAffectation</label>
                                </th>
                                <th>
                                    <label>Etat</label>
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model)
                            {
                                no++;
                                <tr>
                                    <td>@no</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.vehicule.NumeroImatriculation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.service.NomService)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.utilisateur.Nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateAffectation)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.occupe)
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                                                data-toggle="dropdown" aria-expanded="false">Actions
                                            </span>
                                            <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info fa fa-pencil" })<br />
                                                <br />
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success fa fa-check" })<br />
                                                <br />
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash" })<br />
                                                <br />
                                                <a href="@Url.Action("Create", "affectation")" class=" btn btn-sm  btn-warning"><i class="fa fa-plus mr-2"></i>Nouveau</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
}