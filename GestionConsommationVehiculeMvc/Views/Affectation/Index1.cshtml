@model IEnumerable<GestionConsommationVehiculeMvc.Models.ModeleAffectation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/_Default.cshtml";
}
<!Doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color: rgb(0, 255, 255)">
        
        <hr />
        <div class="table-responsive">
            <div class="container mt-15">
                <div class="mt-3">


                    <table class="table table-striped table table-bordered" id="users-list">
                        <thead class="table-dark">
                            <tr>
                                <th>No</th>
                                <th>
                                    <label>Plaque</label>

                                </th>
                                <th>
                                    <label>Marque</label>

                                </th>
                                <th>
                                    <label>Modele</label>

                                </th>
                                <th>
                                    <label>Couleur</label>
                                </th>
                                
                                
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model)
                            {
                                no++;
                                <tr>
                                    <td>@no</td>
                                    <td>
                                        @item.plaque
                                    </td>
                                    <td>
                                        @item.marque
                                    </td>
                                    <td>
                                        @item.modele

                                    </td>
                                    <td>
                                        @item.couleur
                                    </td>
                                    
                                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
}
