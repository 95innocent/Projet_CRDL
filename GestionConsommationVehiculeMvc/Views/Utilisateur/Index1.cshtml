@model IEnumerable<GestionConsommationVehiculeMvc.Models.utilisateur>
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Layout/_Defaults.cshtml";
}

<!Doctype html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color: rgb(0, 255, 255)">
        <h5  style="text-align: center; font-size:30px;background-color:rgb(255, 216, 0)"><u><B>Liste des Employes</B></u></h5><br/> 
        <hr />
        <div class="table-responsive">
            <div class="container mt-15">
                <div class="mt-3">

          <table class="table table-striped table table-bordered" id="users-list">
                        <thead class="table-dark">
                            <tr>
                                <th>Numero</th>
                                <th>
                                    <label>Nom</label>
                                </th>
                                <th>
                                    <label>Prenom</label>
                                </th>
                                <th>
                                   <label>Email</label>
                                </th>
                               

                                <th>
                                    <label>Telephone</label>
                                </th>
                                <th>
                                    <label>Direction</label>
                                </th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model)
                            {
                                no++;
                                <tr>
                                    <td>@no</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Prenon)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.telephone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.service.NomService)
                                    </td>


                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
}