@model GestionConsommationVehiculeMvc.Models.utilisateur

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Includes/_Default.cshtml";
}
<!DOCTYPE html>
<html>

@RenderPage("~/Views/Inc/_Head.cshtml")

<body style="background-image: url(Assets/fonts/Vehicule2.jpg)">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading" style="text-align: center; color: cyan">
                    <b
                        style="text-align: center; color: cyan">Authentification</b>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
@*<legend></legend>
 <fieldset class="hold-transition login-page">*@
                    <div class="login-box">
                        <div class="login-logo">
                            <a><b style="text-align: center;">&emsp;Gestion des Consommations des Vehicules</b></a>
                        </div>
                        <!-- /.login-logo -->
                        
                            
                        <div class="login-box-body">
                            <div class="form-group has-feedback">
                                <input type="text" class="form-control" placeholder="Entre le nom utilisateur"
                                    name="username" autocomplete="off" required>
                                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                            </div>
                            <div class="form-group has-feedback">
                                <input type="password" class="form-control" placeholder="Entre le mot de passe"

                                    name="Password" autocomplete="off" required>

                                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value=" CONNEXION" class="form-control btn btn-primary" /> 
                                
                            </div>
                        </div>
                       </div>
                }
            </div>
        </div>
    </div>
</body>

</html>
